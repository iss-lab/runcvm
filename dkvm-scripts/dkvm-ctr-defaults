DKVM=/opt/dkvm
DKVM_PATH=$DKVM/usr/sbin:$DKVM/usr/bin:$DKVM/sbin:$DKVM/bin:$DKVM/usr/lib/qemu

QEMU_IFUP="$DKVM/scripts/dkvm-ctr-qemu-ifup"
QEMU_IFDOWN="$DKVM/scripts/dkvm-ctr-qemu-ifdown"
QEMU_BRIDGE='q0'

QEMU_VIRTIOFSD_SOCKET=/run/.virtiofs.sock
QEMU_GUEST_AGENT=/run/.qemu-guest-agent
QEMU_MONITOR_SOCKET=/run/.qemu-monitor-socket

clean_env() {
    export -n DKVM_BREAK DKVM_INIT \
    DKVM_KERNEL DKVM_KERNEL_DEBUG DKVM_KERNEL_ARGS DKVM_KERNEL_INITRAMFS_PATH DKVM_KERNEL_PATH DKVM_DISKS \
    DKVM_UIDGID DKVM_VM_MOUNTPOINT DKVM_TMPFS \
    DKVM_CPUS DKVM_MEM_SIZE

    # May be set in VM by busybox init process
    export -n USER
}
